@model SongModel
@{
    ViewBag.Title = "Create Product";
    Layout = "_AdminLayout";
}
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Artist"></label>
        <div><span asp-validation-for="Artist" class="text-danger"></span></div>
        <textarea asp-for="Artist" class="form-control"></textarea>
    </div>
    @*<div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" />
        </div>*@

    <div class="form-group">
        <label asp-for="Category"></label>
        <div><span asp-validation-for="CategoryID" class="text-danger"></span></div>
        <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>